@model Lab1.Areas.User.Models.UserLoginModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "User Login";
    Layout = "_Layout";
}

<h2>User Login</h2>
<form asp-area="User" asp-action="UserLogin" asp-controller="User" class="pb-3">
    <div>
        Username : @Html.TextBoxFor(m => m.Username)
    </div>
    <div>
        Password : @Html.PasswordFor(m => m.Password)
    </div>
    <div>
        <input type="submit" value="Login" />
    </div>
</form>
